<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="student.stdashboard"
    android:background="@drawable/backgroundcolor"

    android:orientation="vertical"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#6BDFED"
        android:padding="2dp"
        android:layout_marginTop="50dp"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            >

        </ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD ACHIVMENTS"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black">

        </TextView>












    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="@color/white"


        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="VIEW ACHIVMENTS"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
               android:background="@drawable/border"
                android:backgroundTint="#0F7E48"
                android:padding="15dp"
                android:textAlignment="center"
                android:id="@+id/viewachivment"



                >
            </TextView>




        </LinearLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add New Acheivment"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:layout_marginTop="10dp">
</TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select"
                android:textSize="20dp"
                android:textStyle="bold"
                >
            </TextView>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                >

            </Spinner>

        </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="25dp"></TextView>

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/flateborder"
        android:padding="5dp"
        android:hint="Enter ID"
        android:text="25dp"
        android:layout_marginLeft="20dp"
        >

    </EditText>




</LinearLayout>
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Title......."
            android:textSize="20dp"
            android:padding="5dp"
            android:background="@drawable/flateborder"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            ></EditText>
        <EditText
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:hint="Title......."
            android:textSize="20dp"
            android:background="@drawable/flateborder"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            ></EditText>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="25dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
         android:backgroundTint="@color/green"
            android:id="@+id/btnsave"
            ></Button>





    </LinearLayout>




</androidx.appcompat.widget.LinearLayoutCompat>