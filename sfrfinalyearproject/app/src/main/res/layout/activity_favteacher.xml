<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="student.stdashboard"
    android:background="@drawable/backgroundcolor"

    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/profileimage"
            android:layout_weight="1"
            android:src="@color/cardview_dark_background"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profelname"

            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:text="Rahmat yousafzai"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_gravity="center"
            >

        </TextView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_more_vert_24"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:layout_weight="0"


            >

        </ImageView>

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#6BDFED"
        android:padding="5dp"
        android:layout_marginTop="30dp"

        >
        <ImageView
            android:id="@+id/imgback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            >

        </ImageView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/faculty"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"

            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="favrourt teacher"
            android:textSize="25dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            ></TextView>





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:orientation="horizontal"


        >

        <ListView
            android:id="@+id/favtecher"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#E3DBDB"
            android:divider="@color/white"
            android:dividerHeight="10dp"></ListView>

    </LinearLayout>




</androidx.appcompat.widget.LinearLayoutCompat>