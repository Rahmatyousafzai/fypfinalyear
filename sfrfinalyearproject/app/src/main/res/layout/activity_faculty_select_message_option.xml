<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Faculty.faculty_select_message_option"

android:orientation="vertical"
    android:background="@drawable/backgroundcolor"

    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_gravity="center"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilepicture"

            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:src="@drawable/saeed"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp"


            />
        <TextView
            android:id="@+id/profelname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Rahmat Yousafzai"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_weight="1"

            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_8sdp"/>

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/baseline_more_vert_24"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_50sdp"
            android:backgroundTint="@color/white"



            />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="50dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="450dp"
android:background="@drawable/borderwithgreen"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="40dp"
        >
    <Button
        android:id="@+id/Student"
        android:layout_width="296dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/green"
        android:text="Student"
        android:textSize="30dp"
        android:textStyle="bold"
  ></Button>

    <Button
        android:id="@+id/Alumni"
        android:layout_width="296dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/green"
        android:text="Alumni"
        android:textSize="30dp"
        android:textStyle="bold"
       android:layout_marginTop="20dp"></Button>

        <Button
            android:id="@+id/Displine"
            android:layout_width="296dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/green"
            android:text="Program"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
></Button>

        <Button
            android:id="@+id/semeter"
            android:layout_width="296dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/green"
            android:text="samester"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"


        ></Button>
    </LinearLayout>

</LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>