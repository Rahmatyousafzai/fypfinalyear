<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_login"
    android:background="@drawable/backgroundcolor"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/adminicon"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        ></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="@drawable/top_rounded_corner"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Admin Log In"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:textColor="#02786D"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            ></TextView>

        <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Enter Usernmae...."
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="#02786D"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/borderwithgreen"
            android:id="@+id/adusername"
            ></EditText>

        <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Enter Password...."
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="#02786D"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/borderwithgreen"
            android:id="@+id/adpassword"
            ></EditText>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/green"
            android:text="Log In"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/btnadlogin"

            >

        </Button>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in is Faculty memeber?"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in?"
                android:textSize="20dp"
                android:textColor="#0A2DEC"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/txtAdfaculty"
                >



            </TextView>




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in is Student?"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in?"
                android:textSize="20dp"
                android:textColor="#0A2DEC"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:id="@+id/adstudent"
                >



            </TextView>




        </LinearLayout>



    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>