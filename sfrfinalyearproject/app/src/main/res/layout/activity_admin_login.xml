<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_login"
    android:background="@drawable/backgroundcolor"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Admin Icon ImageView -->
    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:src="@drawable/adminicon"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <!-- Login Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_390sdp"
        android:background="@drawable/top_rounded_corner"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="20dp">

        <!-- Title TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textSize="24sp"
            android:textColor="#02786D"
            android:textAlignment="center"

            android:textStyle="bold"
            android:layout_gravity="center"/>

        <!-- Username EditText -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Username..."
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="#02786D"
            android:layout_marginTop="20dp"
            android:background="@drawable/borderwithgreen"
            android:id="@+id/username"/>

        <!-- Password EditText and Toggle Visibility -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/borderwithgreen"
            android:padding="8dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter Password..."
                android:textSize="16sp"
                android:textColor="#02786D"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:id="@+id/password"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/hidepassword"
                android:id="@+id/hidepassword"/>
        </LinearLayout>

        <!-- Login Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/green"
            android:text="Log In"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:id="@+id/btnadlogin"/>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
