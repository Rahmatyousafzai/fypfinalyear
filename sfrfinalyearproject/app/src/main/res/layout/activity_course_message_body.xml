<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Faculty.course_message_body"
    android:background="@drawable/backgroundcolor"
    android:orientation="vertical"

    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginLeft="30dp"

        android:layout_marginTop="100dp"

        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgback"
            android:src="@drawable/back"
            ></ImageView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_account_circle_24"
            android:layout_marginLeft="20dp"
            android:id="@+id/pfimage"

            >

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr.Ihsan"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@color/white"


            ></TextView>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    
    ><LinearLayout
    android:layout_width="300dp"
    android:layout_height="40dp"

    android:background="@drawable/flateborder"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    >

    <TextView
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:text="NA,BE"
android:textSize="30dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"

></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:src="@drawable/add_button"
        android:id="@+id/addcourse"


        ></ImageView>

</LinearLayout>
    



    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:hint="Type SOmthing"
            android:textAlignment="textStart"

            ></EditText>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
        android:src="@drawable/add_button"
            android:layout_marginLeft="30dp"
            android:id="@+id/addtem"
            >
        </ImageView>
    </LinearLayout>
<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Send Via Email"
    android:layout_gravity="right"
    android:layout_marginRight="30dp"

    android:id="@+id/chkemail"
    ></CheckBox>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wish"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/green"

        android:id="@+id/sendwish"
        ></Button>
    
</LinearLayout>













</androidx.appcompat.widget.LinearLayoutCompat>