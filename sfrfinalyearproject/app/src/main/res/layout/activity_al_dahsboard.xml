<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="student.stdashboard"
    android:background="@drawable/backgroundcolor"

    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/profileimage"
            android:layout_weight="1"
            android:src="@color/cardview_dark_background"
            ></ImageView>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/profelname"

            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:text="Admin"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            >

        </TextView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_more_vert_24"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:layout_weight="0"


            >

        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="#73E3F1"
        android:layout_marginTop="10dp"


        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/publication"
                ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="News"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/adnews"


                ></TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/notification"
                android:id="@+id/imgnptification"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Notification"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/adtxtnotification"

                >

            </TextView>


        </LinearLayout>






        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/message"
                android:id="@+id/imgmessage"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/adtxtmessage"
                >

            </TextView>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@color/white"

        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="350dp"
            android:layout_marginTop="10dp"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:padding="20dp"
            android:id="@+id/strcview"
            ></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"

            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/faculty"
                >
            </ImageView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Techers"
                android:textSize= "20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/textteacher"
                ></TextView>
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="170dp"

            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/heart"
                >
            </ImageView>
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="Favourite Teacher"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"

                android:id="@+id/favtecher"

                >

            </TextView>






        </LinearLayout>



    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>