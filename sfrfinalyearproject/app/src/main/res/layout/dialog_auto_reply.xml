<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorAccent"

    >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message Setting"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textAlignment="center"


        ></TextView>
    <!-- Auto Reply Toggle -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/auto_reply_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Auto Reply"
        android:textSize="18sp" />

    <!-- Message Forward Toggle -->
    <Switch
        android:id="@+id/switch_auto_reply"
        android:layout_width="80dp"
        android:layout_height="60dp"



        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_forward_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message Forwarding"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <Switch
        android:id="@+id/switch_message_forward"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
  />

    </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <TextView
          android:id="@+id/btn_forward_setting"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Forward Setting"
          android:backgroundTint="@color/green"
          android:layout_gravity="center"
          android:textSize="20dp"
          android:textColor="@color/black"
          />

    <TextView

        android:text="Forword  To"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forwordid"
android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"

        ></TextView>
    <!-- Button to open forward setting dialog -->


  </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >


        <TextView

            android:text="Log Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logout"
            android:textColor="@color/black"
            android:textSize="18sp"

            ></TextView>
        <!-- Button to open forward setting dialog -->
        <ImageView
            android:id="@+id/imgLogout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Forward Setting"
            android:backgroundTint="@color/green"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:src="@drawable/laughter"

            android:layout_marginLeft="20dp"
            />

    </LinearLayout>




</LinearLayout>
